model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

enum UserRole {
  ADMIN
  USER
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  hashedPassword String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  role UserRole @default(USER)

  accounts Account[]
  
  Experiences Experience[] @relation("Author")
  mySaves Save[] @relation("liker")

  tagIds String[]   @db.ObjectId
  Tags  Tag[] @relation(fields: [tagIds], references: [id])
  myComments Comment[] 
}



model Experience {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  startDate   DateTime
  title       String
  description String
  endDate     DateTime
  pros        Pro[]
  cons        Con[]
  dayEvents   DayEvent[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User         @relation("Author", fields: [userId], references: [id], onDelete: Cascade)
  likes Save[] @relation("experience")
  comments Comment[]
}

model Save {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @db.ObjectId
  expId String @db.ObjectId
  exp        Experience         @relation("experience", fields: [expId], references: [id], onDelete: Cascade)
  user   User   @relation("liker", fields: [userId], references: [id], onDelete: Cascade) 
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Tag {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  userIds String[] @db.ObjectId
  Users   User[]   @relation(fields: [userIds], references: [id])
}
model Comment{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  content String
  experienceId String @db.ObjectId
  authorId String @db.ObjectId
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  Author   User   @relation(fields: [authorId], references: [id])
  Experience Experience @relation(fields: [experienceId], references: [id], onDelete: Cascade)
}

model DayEvent {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  ExperienceId String     @db.ObjectId
  description  String
  Experience   Experience @relation(fields: [ExperienceId], references: [id], onDelete: Cascade)
}

model Con {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  ExperienceId String     @db.ObjectId
  description  String
  Experience   Experience @relation(fields: [ExperienceId], references: [id], onDelete: Cascade)
}

model Pro {
  id           String     @id @default(auto()) @map("_id") @db.ObjectId
  ExperienceId String     @db.ObjectId
  description  String
  Experience   Experience @relation(fields: [ExperienceId], references: [id], onDelete: Cascade)
}

